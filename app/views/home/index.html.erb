<h1>Welcome to StarterTribe!</h1>
<h2>Pitch an idea, get feedback, form a team, and launch your business</h2>
<p>StarterTribe is an online community to cultivate new ideas into strong businesses.</p>

<% if current_user %>
	<%= link_to 'TO THE PITCHES!', pitches_path %>
<% else %>
	<p> Sign up here: </p>
	<% @user = User.new %>
	<%= form_for @user do |f| %>
	  <%= f.error_messages %>
	  <p>
	    <%= f.label :username %><br />
	    <%= f.text_field :username %>
	  </p>
	  <p>
	    <%= f.label :email, "Email Address" %><br />
	    <%= f.text_field :email %>
	  </p>
	  <p>
	    <%= f.label :password %><br />
	    <%= f.password_field :password %>
	  </p>
	  <p>
	    <%= f.label :password_confirmation, "Confirm Password" %><br />
	    <%= f.password_field :password_confirmation %>
	  </p>
	  <p><%= f.submit (@user.new_record? ? "Sign up" : "Update") %></p>
	<% end %>
<% end %>

